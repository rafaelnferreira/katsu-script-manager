<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/public/css/shared.css">

    <style>
        .row-name {
            margin-left: 20px;
        }

        a {
            display: flex;
        }
    </style>
</head>

<body>

    <div class="container">
        {{#if folders}}
        {{#each folders}}
        <div class="row odd-colours custom-row">
            <div class="col-md-12">
                <a href="/logs/{{this}}"> <span class="glyphicon glyphicon-folder-open"></span>
                    <p class="row-name">{{this}}</p>
                </a>
            </div>
        </div>
        {{/each}}
        {{/if}}

        {{#if folderContent}}
        {{#each folderContent}}
        <div class="row odd-colours custom-row">
            <div class="col-md-12">
                <a href="/logs/{{this.parentFolder}}/{{this.content}}" target="blank"> <span class="glyphicon glyphicon-file"></span>
                    <p class="row-name">{{this.content}}</p>
                </a>
            </div>
        </div>
        {{/each}}
        {{/if}}

    </div>
</body>

</html>